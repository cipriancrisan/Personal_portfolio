<script>
const imageTrack = document.getElementById('image-track');

// Duplicating content for infinite scroll effect
imageTrack.innerHTML += imageTrack.innerHTML;

const scrollAmount = 600;  // The amount to scroll for each wheel event
const smoothDuration = 60;  // Duration in milliseconds for the smooth scroll effect

imageTrack.addEventListener('wheel', function(event) {
    // Determine the scroll direction: 1 for Downwards, -1 for Upwards
    let direction = event.deltaY > 0 ? 1 : -1;

    // Calculate the target scroll position
    let targetPosition = imageTrack.scrollTop + direction * scrollAmount;

    // Apply smooth scroll to the target position
    smoothScrollTo(targetPosition);

    event.preventDefault();  // Prevent the default scroll behavior
}, { passive: false });

function smoothScrollTo(targetPosition) {
    imageTrack.scrollTo({
        top: targetPosition,
        behavior: 'smooth'
    });
}

imageTrack.addEventListener('scroll', function() {
    if (imageTrack.scrollTop + imageTrack.clientHeight >= imageTrack.scrollHeight) {
        setTimeout(() => {
            customSmoothScrollTo(imageTrack, 0, 1000);  // 2000ms duration for going back up
        }, 50);  // Give a slight delay before scrolling back to the top
    }
});

function customSmoothScrollTo(element, targetPosition, duration) {
    let startTime = null;
    let startPosition = element.scrollTop;

    function animate(time) {
        if (startTime === null) startTime = time;
        const timeElapsed = time - startTime;
        const progress = Math.min(timeElapsed / duration, 1);  // Ensure it's between 0 and 1

        element.scrollTop = startPosition + (targetPosition - startPosition) * easeInOutQuad(progress);
        if (progress < 1) {
            requestAnimationFrame(animate);
        }
    }

    requestAnimationFrame(animate);
}

function easeInOutQuad(t) {
    return t < 0.5 ? 2 * t * t : -1 + (4 - 2 * t) * t;
}
</script>
